    .search-bar input,
    .search-button,
    .search-button:before,
    .search-button:after {
        transition: all 0.25s ease-out;
    }

    .search-bar input,
    .search-button {
        width: 3em;
        height: 3em;
    }

        .search-bar input:invalid:not(:focus),
        .search-button {
            cursor: pointer;
        }

        .search-bar,
        .search-bar input:focus,
        .search-bar input:valid {
            width: 50%;
        }

            .search-bar input:focus,
            .search-bar input:not(:focus) + .search-button:focus {
                outline: transparent;
            }

    .search-bar {
        margin: auto;
        padding: 1.5em;
        justify-content: center;
        max-width: 30em;
        font-size: 17px;
    }

        .search-bar input {
            background: transparent;
            border-radius: 1.5em;
            box-shadow: 0 0 0 0.4em #f1f1f1 inset;
            padding: 0.75em;
            transform: translate(0.5em, 0.5em) scale(0.5);
            transform-origin: 100% 0;
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
        }

            .search-bar input:focus,
            .search-bar input:valid {
                background: #282539;
                border-radius: 0.375em 0 0 0.375em;
                box-shadow: 0 0 0 0.1em #cbbddb inset;
                transform: scale(1);
            }

    .search-button {
        background: #f1f1f1;
        b order-radius: 0 0.75em 0.75em 0 / 0 1.5em 1.5em 0;
        padding: 0.75em;
        position: relative;
        transform: translate(0.25em, 0.25em) rotate(45deg) scale(0.25, 0.125);
        transform-origin: 0 50%;
    }

        .search-button:before,
        .search-button:after {
            content: "";
            display: block;
            opacity: 0;
            position: absolute;
        }

        .search-button:before {
            border-radius: 50%;
            box-shadow: 0 0 0 0.2em #f1f1f1 inset;
            top: 0.75em;
            left: 0.75em;
            width: 1.2em;
            height: 1.2em;
        }

        .search-button:after {
            background: #f1f1f1;
            border-radius: 0 0.25em 0.25em 0;
            top: 51%;
            left: 51%;
            width: 0.75em;
            height: 0.25em;
            transform: translate(0.2em, 0) rotate(45deg);
            transform-origin: 0 50%;
        }

        .search-button span {
            display: inline-block;
            overflow: hidden;
            width: 1px;
            height: 1px;
        }

    input[type="search"]::-webkit-search-cancel-button {
        -webkit-appearance: none;
        display: inline-block;
        width: 12px;
        height: 12px;
        margin-left: 10px;
        background: linear-gradient(45deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 43%, #cbbddb 45%, #cbbddb 55%, rgba(0, 0, 0, 0) 57%, rgba(0, 0, 0, 0) 100%), linear-gradient(135deg, transparent 0%, transparent 43%, #cbbddb 45%, #cbbddb 55%, transparent 57%, transparent 100%);
    }

    .search-bar input:focus + .search-button,
    .search-bar input:valid + .search-button {
        background: #8f7cec;
        border-radius: 0 0.375em 0.375em 0;
        transform: scale(1);
    }

        .search-bar input:focus + .search-button:before,
        .search-bar input:focus + .search-button:after,
        .search-bar input:valid + .search-button:before,
        .search-bar input:valid + .search-button:after {
            opacity: 1;
        }

        .search-bar input:focus + .search-button:active,
        .search-bar input:valid + .search-button:active {
            transform: translateY(1px);
        }

     .bungkus {
          margin: 10px;
     }
     h3 {
         display:flex ; 
         align-items :center;
