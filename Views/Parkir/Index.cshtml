<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                
                <h3><span> <i class="bi bi-p-circle-fill"></i></span>Daftar Parkir<span> <i class="bi bi-p-circle-fill"></i></span></h3>
                
            </div>

            <div class="card-body" id="ini-id">
                <a href="/Parkir/Create" class="btn btn-success mb-2">Tambah Parkir<i id="adada" class="bi bi-plus-circle"></i></a>

                <div class="bungkus">

                    <form action="Index" method="get" class="search-bar">
                        <input type="text" name="search" placeholder="Nomor Plat" required autocomplete="off">
                        <button class="search-button" type="submit">
                            <span>Search</span>
                        </button>
                    </form>
                </div>
                <table border="1" cellspacing="0"  class="table table-hover">
                    <thead>
                        <tr class="table-danger">
                            <th>Type Transportasi</th>
                            <th>Nomor Plat</th>
                            <th>Waktu Masuk</th>
                            <th text-align="center" >CRUD</th>
                        </tr>
                    </thead>

                     <tbody>
                        @foreach (var parkir in Model)
                        {
                            <tr class="table-default">
                                <th>@parkir.TypeTransportasi.Nama</th>
                                <td>@parkir.PlateNomor</td>
                                <td>@parkir.WaktuMasuk</td>

                                 <td>
                                    <a href="/Parkir/Detail/@parkir.Id" class="btn btn-primary">Detail</a>
                                    <a href="/Parkir/Edit/@parkir.Id" class="btn btn-warning">Edit</a>
                                    <a href="/Parkir/Delete/@parkir.Id" class="btn btn-danger">Delete</a>
                                </td>
 
                            </tr>
                        }
                    </tbody>
                 </table>
            </div>
        </div>
    </div>
</div>